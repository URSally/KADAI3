<body>
  <main>
   <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User Info</h2>
         <% if @user.errors.any? %>
             <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
             <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
         <% end %>
         <%= form_with model: @user do |f| %>
          <div class="form-group">
           <label for="inputName">Name</label>
           <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName"%>
          </div>
          <div class="form-group">
           <label for="inputImage">Image</label>
           <%= f.file_field :profile_image, class:"form-control-file user_image", placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="inputIntroducion">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputIntroduction"%>
          </div>
          <div class="form-group">
           <%= f.submit "Update User", class:"btn btn-secondary" %>
          </div>
         <% end %>
     </div>
    </div>
   </div>
  </main>
</body>